		<clientspec>hunt</clientspec>
		<thirdPartyWorkSpace>buildbot_3rdparty_novus</thirdPartyWorkSpace>
		<internalProjectName>hunt</internalProjectName>
		<branchName>trunk</branchName>
		<name>hunt</name>
		<execBase>GameSDK;Hunt</execBase>
		<gameBase>GameSDK;game_hunt</gameBase>
		<solution>Code\Solutions\CryEngineTools.sln</solution>
